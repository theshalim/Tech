@model IEnumerable<Tech.Areas.HrAddress.Models.HrDivision>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container border">
    <div class="row ">
        <div class="col-10">
            <h3>Division List</h3>
        </div>
        <div class="col-2">
            
            <a asp-action="Create" asp-area="HrAddress"  class="btn"></a>

        </div>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EnName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BnName)
                </th>
                <th>
                        Action
                </th>
            </tr>
        </thead>
       <tbody>
           @foreach(var item in Model)
           {
           <tr>
               <td>
                   @Html.DisplayFor(modelItem => item.EnName)
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.BnName)
               </td>
               <td>
                   Buttun
               </td>
           </tr>
           }
       </tbody>
    </table>




</div>


