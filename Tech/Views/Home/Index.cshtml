            <p>Test Footer</p>
        </div>
    </div>
    @*Author Card*@
    <div class="card border col-2.5" style="margin-top:20px; margin-left: 0px;">
        <div class="card-header text-center text-capitalize">
            <h3>Author Status <a class="btn btn-sm btn-dark" style="margin-left:5px;" asp-action="Index" asp-controller="AuthorInfo">Add Author</a></h3>
