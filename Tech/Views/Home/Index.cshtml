    @*Book Card*@
    <div class="card border col-2.5" style="margin-top:20px; margin-left: 0px;">
        <div class="card-header text-center text-capitalize">
            <h3>Book Status  <a class="btn btn-sm btn-dark" style="margin-left:55px;" asp-action="Index" asp-controller="BookInfo"> Add Book</a></h3>
        </div>
        <div class="card-body">
